generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Pull {
  id           BigInt     @id @default(autoincrement())
  number       Int
  state        String
  title        String
  userLogin    String
  createdAt    DateTime
  updatedAt    DateTime
  closedAt     DateTime
  mergedAt     DateTime
  assignees    String
  draft        Boolean
  headRef      String
  baseRef      String
  repositoryId BigInt
  labels       Label[]
  repo         Repository @relation(fields: [repositoryId], references: [id])

  @@map("pulls")
}

model Label {
  id          BigInt @id @default(autoincrement())
  nodeId      String @unique
  name        String
  description String
  pulls       Pull[]

  @@map("labels")
}

model Repository {
  id          BigInt  @id
  nodeId      String  @unique
  name        String
  fullName    String  @unique
  ownerLogin  String
  description String?
  visibility  String
  pulls       Pull[]

  @@map("repositories")
}
