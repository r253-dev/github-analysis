generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Commit {
  id         Int      @id @default(autoincrement())
  nodeId     String
  pullId     Int
  sha        String
  message    String
  authorName String
  date       DateTime
  pull       Pull     @relation(fields: [pullId], references: [id])
}

model OutlierPull {
  pullId Int  @id
  pull   Pull @relation(fields: [pullId], references: [id])

  @@map("outlier_pulls")
}

model Pull {
  id           Int          @id @default(autoincrement())
  number       Int
  state        String
  title        String
  userLogin    String
  createdAt    DateTime
  updatedAt    DateTime
  closedAt     DateTime?
  mergedAt     DateTime?
  assignees    String
  draft        Boolean
  headRef      String
  baseRef      String
  repositoryId Int
  labels       Label[]
  repo         Repository   @relation(fields: [repositoryId], references: [id])
  commits      Commit[]
  PullDetail   PullDetail?
  OutlierPull  OutlierPull?

  @@map("pulls")
}

model PullDetail {
  pullId         Int       @id
  body           String?
  merged         Boolean
  comments       Int
  reviewComments Int
  commits        Int
  additions      Int
  deletions      Int
  changedFiles   Int
  openedAt       DateTime?
  pull           Pull      @relation(fields: [pullId], references: [id])

  @@map("pull_details")
}

model Label {
  id          Int    @id @default(autoincrement())
  nodeId      String @unique
  name        String
  description String
  pulls       Pull[]

  @@map("labels")
}

model Repository {
  id          Int     @id @default(autoincrement())
  nodeId      String  @unique
  name        String
  fullName    String  @unique
  ownerLogin  String
  description String?
  visibility  String
  pulls       Pull[]

  @@map("repositories")
}
